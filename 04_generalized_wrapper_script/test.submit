# The environment
universe       = vanilla
getenv         = True
request_cpus   = 1
request_memory = 1G

# Execution
initial_dir    = $ENV(HOME)
executable     = /home/makuhn/htcondor_test_job/wrapper_script.sh

# Job
arguments      = ~/htcondor_examples/04_generalized_wrapper_script/example.py --subject 01
